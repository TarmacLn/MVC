@{
    ViewData["Title"] = "Student Portal";
}

<div class="text-center">
    <h1 class="display-4">Student Portal</h1>
    <p>View your grades and academic performance</p>
</div>

<br>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="d-grid gap-3">
            <a asp-action="GradesPerSemester" asp-controller="Student" class="btn btn-outline-primary btn-lg">
                <i class="bi bi-calendar-check"></i> Grades per Semester
            </a>
            
            <a asp-action="GradesPerCourse" asp-controller="Student" class="btn btn-outline-primary btn-lg">
                <i class="bi bi-book"></i> Grades per Course
            </a>
            
            <a asp-action="TotalAverage" asp-controller="Student" class="btn btn-outline-primary btn-lg">
                <i class="bi bi-calculator"></i> Total Average
            </a>
        </div>
    </div>
</div>

<br>

<div class="text-center">
    <a asp-action="Index" asp-controller="Users" class="btn btn-secondary">Back to Main Menu</a>
</div>