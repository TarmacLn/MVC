@{
    ViewData["Title"] = "Secretary Portal";
}

<div class="text-center">
    <h1 class="display-4">Secretary Portal</h1>
    <p>Manage professors, students, and course assignments</p>
</div>

<br>

<div class="row justify-content-center">
    <div class="col-md-8">
        <h4 class="mb-3">User Management</h4>
        <div class="d-grid gap-3 mb-4">
            <a asp-action="UsersList" asp-controller="Secretary" class="btn btn-outline-primary btn-lg">
                <i class="bi bi-people"></i> Users List
            </a>
            
            <a asp-action="AddProfessor" asp-controller="Secretary" class="btn btn-outline-primary btn-lg">
                <i class="bi bi-person-plus"></i> Add Professor
            </a>
            
            <a asp-action="AddStudent" asp-controller="Secretary" class="btn btn-outline-primary btn-lg">
                <i class="bi bi-person-plus-fill"></i> Add Student
            </a>
        </div>

        <h4 class="mb-3">Course Management</h4>
        <div class="d-grid gap-3">
            <a asp-action="CoursesList" asp-controller="Secretary" class="btn btn-outline-success btn-lg">
                <i class="bi bi-journal-text"></i> Courses List
            </a>
            
            <a asp-action="StudentsCoursesList" asp-controller="Secretary" class="btn btn-outline-success btn-lg">
                <i class="bi bi-mortarboard"></i> Students Courses List
            </a>
        </div>
    </div>
</div>

<br>

<div class="text-center">
    <a asp-action="Index" asp-controller="Users" class="btn btn-secondary">Back to Main Menu</a>
</div>