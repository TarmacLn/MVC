@model MVC.Models.EnrollInCourseViewModel

@{
    var successMessage = TempData["SuccessMessage"] as string;
    var errorMessage = TempData["ErrorMessage"] as string;
}

<a asp-action="EnrollInCourse" asp-controller="Secretary" class="btn btn-secondary">Back</a>

<br>    

<h1>Enroll Student in Course</h1>

@if (!string.IsNullOrEmpty(successMessage)) {
    <div class="alert alert-success" role="alert">@successMessage</div>
}

@if (!string.IsNullOrEmpty(errorMessage)) {
    <div class="alert alert-danger" role="alert">@errorMessage</div>
}


<br>

<form asp-action="EnrollInCourse" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="StudentId" />

     <div class="form-group mb-3">
        <label>Student</label>
        <input type="text" class="form-control" value="@Model.StudentName" readonly />
    </div>

    <div class="form-group mb-3">
        <label>Department</label>
        <input type="text" class="form-control" value="@Model.StudentDepartment" readonly />
    </div>

    <div class="form-group mb-3">
        <label asp-for="CourseId">Department Courses</label>
        <select asp-for="CourseId" class="form-control" asp-items="Model.Courses">
            <option value="">Select Course</option>
        </select>
        <span asp-validation-for="CourseId" class="text-danger"></span>
    </div>

    <br>

    <button type="submit" class="btn btn-primary">Confirm</button>
</form>

<div asp-validation-summary="All" class="text-danger mt-2"></div>
