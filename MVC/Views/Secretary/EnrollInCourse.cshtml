@model MVC.Models.EnrollInCourseViewModel

@{
    var successMessage = TempData["SuccessMessage"] as string;
    var errorMessage = TempData["ErrorMessage"] as string;
}

<a asp-action="Index" asp-controller="Secretary" class="btn btn-secondary">Back</a>

<br>    

<h1>Enroll Student in Course</h1>

@if (!string.IsNullOrEmpty(successMessage)) {
    <div class="alert alert-success" role="alert">@successMessage</div>
}

@if (!string.IsNullOrEmpty(errorMessage)) {
    <div class="alert alert-danger" role="alert">@errorMessage</div>
}


<br>

<form asp-action="EnrollInCourse" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="Department"></label>
        <select asp-for="Department" class="form-control" asp-items="Html.GetEnumSelectList<MVC.Models.Department>()">
            <option value="">Select Department</option>
        </select>
        <span asp-validation-for="Department" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Course"></label>
        <select asp-for="Course" class="form-control" asp-items="Html.GetEnumSelectList<MVC.Models.Course>()">
            <option value="">Select Course</option>
        </select>
        <span asp-validation-for="Course" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Student"></label>
        <select asp-for="Student" class="form-control" asp-items="Html.GetEnumSelectList<MVC.Models.Student>()">
            <option value="">Select Student</option>
        </select>
        <span asp-validation-for="Student" class="text-danger"></span>
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Confirm</button>
</form>

<div asp-validation-summary="All" class="text-danger mt-2"></div>
