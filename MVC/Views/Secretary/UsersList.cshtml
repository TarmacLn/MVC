@model IEnumerable<MVC.Models.User>

@{
    var successMessage = TempData["SuccessMessage"] as string;
    var errorMessage = TempData["ErrorMessage"] as string;
}

<a asp-action="Index" asp-controller="Secretary" class="btn btn-secondary">Back</a>

<br>

<h2>Users</h2>
<p>Manage professors and students in the system. Assign courses to professors and enroll students to courses according to their department</p>
<p>For assiging courses or enrolling in courses, select the preferred users from the users' list</p>

@if (!string.IsNullOrEmpty(successMessage)) {
    <div class="alert alert-success" role="alert">@successMessage</div>
}

@if (!string.IsNullOrEmpty(errorMessage)) {
    <div class="alert alert-danger" role="alert">@errorMessage</div>
}

<br>

<h3>Professors</h3>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Password</th>
            <th>AFM</th>
            <th>Full Name</th>
            <th>Department</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var user in Model.Where(u => u.UserType == MVC.Models.UserType.Professor))
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.Username</td>
            <td>@user.Password</td>
            <td>@user.Professor?.AFM</td>
            <td>@user.Professor?.Fullname</td>
            <td>@user.Professor?.Department.ToString()</td>
            <td>
                <a asp-action="AssignCourse" asp-controller="Secretary" asp-route-professorId="@user.Professor?.UserId" class="btn btn-primary btn-sm">Assign Course</a>
            </td>
            <td>
                <form asp-action="DeleteUser" asp-controller="Secretary" method="post" style="display:inline;">
                    <input type="hidden" name="userId" value="@user.Id" />
                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this professor?');">Delete</button>
                </form>
            </td>
        </tr>

    }
    </tbody>
</table>

<br>

<h3>Students</h3>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Password</th>
            <th>Full Name</th>
            <th>Department</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var user in Model.Where(u => u.UserType == MVC.Models.UserType.Student))
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.Username</td>
            <td>@user.Password</td>
            <td>@user.Student?.Fullname</td>
            <td>@user.Student?.Department.ToString()</td>
            <td>
                <a asp-action="EnrollInCourse" asp-controller="Secretary" asp-route-studentId="@user.Student?.UserId" class="btn btn-primary btn-sm" style="display:inline;">Enroll in Course</a>
            </td>
            <td>
                <form asp-action="DeleteUser" asp-controller="Secretary" method="post" style="display:inline;">
                    <input type="hidden" name="userId" value="@user.Id" />
                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this student?');">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>

