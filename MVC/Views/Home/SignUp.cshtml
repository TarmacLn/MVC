@model MVC.Models.SignUpViewModel

<h1>Sign Up</h1>

<form asp-action="SignUp" method="post" id="signupForm">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="Username"></label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserType"></label>
        <select asp-for="UserType" class="form-control" asp-items="Html.GetEnumSelectList<MVC.Models.UserType>()" id="userTypeSelect">
            <option value="">Select User Type</option>
        </select>
        <span asp-validation-for="UserType" class="text-danger"></span>
    </div>

    <div id="fullnameField" style="display:none;" class="form-group">
        <label asp-for="Fullname"></label>
        <input asp-for="Fullname" class="form-control" />
        <span asp-validation-for="Fullname" class="text-danger"></span>
    </div>

    <div id="afmField" style="display:none;" class="form-group">
        <label asp-for="AFM"></label>
        <input asp-for="AFM" class="form-control" />
        <span asp-validation-for="AFM" class="text-danger"></span>
    </div>

    <div id="phoneField" style="display:none;" class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div id="departmentField" style="display:none;" class="form-group">
        <label asp-for="Department"></label>
        <select asp-for="Department" class="form-control" asp-items="Html.GetEnumSelectList<MVC.Models.Department>()">
            <option value="">Select Department</option>
        </select>
        <span asp-validation-for="Department" class="text-danger"></span>
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Create account</button>
</form>

<div asp-validation-summary="All" class="text-danger mt-2"></div>

<script>
    document.getElementById('userTypeSelect').addEventListener('change', function() {
        var afmField = document.getElementById('afmField');
        var fullnameField = document.getElementById('fullnameField');
        var phoneField = document.getElementById('phoneField');
        var departmentField = document.getElementById('departmentField');
        
        afmField.style.display = 'none';
        fullnameField.style.display = 'none';
        phoneField.style.display = 'none';
        departmentField.style.display = 'none';
        
        if (this.value === '2') {
            // Student: fullname + department
            fullnameField.style.display = 'block';
            departmentField.style.display = 'block';
        } else if (this.value === '1') {
            // Professor: afm + fullname + department
            afmField.style.display = 'block';
            fullnameField.style.display = 'block';
            departmentField.style.display = 'block';
        } else if (this.value === '0') {
            // Secretary: fullname + phone + department
            fullnameField.style.display = 'block';
            phoneField.style.display = 'block';
            departmentField.style.display = 'block';
        }
    });
    
    document.getElementById('userTypeSelect').dispatchEvent(new Event('change'));
</script>
